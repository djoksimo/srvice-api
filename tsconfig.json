{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "paths": {
      "*": ["node_modules/*", "src/*"],
      "types": ["src/types", "src/types/schedule"]
    },
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./src/types/schedule"],
    "outDir": "./built"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
