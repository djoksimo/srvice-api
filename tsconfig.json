{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es6"],
    "module": "CommonJS",
    "target": "ES6",
    "paths": {
      "*": ["node_modules/*", "src/*"],
      "types": ["src/types"]
    },
    "baseUrl": ".",
    "typeRoots": ["./src/types"],
    "outDir": "./built"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
