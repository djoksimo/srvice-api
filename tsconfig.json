{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es6",
    "paths": {
      "*": ["./src/*"]
    },
    "baseUrl": ".",
    "outDir": "./built",
    "rootDir": "src"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "!node_modules/@types", "./**/tests", "./src/test", "./test", "./mock"]
}
