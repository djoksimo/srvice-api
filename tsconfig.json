{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es6",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "baseUrl": ".",
    "outDir": "./built",
    "rootDir": "src",
    "types": ["node", "express", "multer", "mongoose"],
    "typeRoots": ["./src/types/index.ts", "./node_modules/@types", "./src/types/schedule/index.ts"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./**/tests", "./src/test", "./test", "./mock"]
}
